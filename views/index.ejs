<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">

<head>
  <script src="./js/color-modes.js"></script>
  <link rel="stylesheet" href="./bootstrap-icons-1.10.5/font/bootstrap-icons.min.css" />
  <link rel="shortcut icon" href="./img/osama.JPG" type="image/x-icon">
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="" />
  <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors" />
  <meta name="generator" content="Hugo 0.112.5" />
  <title>Home page</title>

  <link href="./css/bootstrap.min.css" rel="stylesheet" />

  <link rel="stylesheet" href="./css/dark-light.css">

  <!-- Custom styles for this template -->
  <link href="./css/sidebars.css" rel="stylesheet" />
  <link rel="stylesheet" href="./css/myStyle.css" />
</head>

<body>

  <%- include('./Components/dark-light.ejs') %>

    <main class="d-flex flex-nowrap">

      <%- include('./Components/sidebar.ejs', {currentPage: "index" }) %>

        <div class="b-example-divider b-example-vr"></div>

        <section class="w-100">
          <%- include('./Components/navbar.ejs') %>


            <% if (arr.length==0) { %>
              <h1 style="text-align: center; margin-top: 4rem;">No Data Avilable</h1>
              <% } %>

                <% if (arr.length > 0) { %>
                  <table style="width: 99%" class="text-center mx-auto table mt-5 table-striped table-bordered">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Full Name</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Country</th>
                        <th scope="col">Age</th>
                        <th scope="col">Last updated</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>

                      <% arr.forEach((element, index)=> { %>
                        <tr>
                          <th scope="row">
                            <%= index +1 %>
                          </th>
                          <td>
                            <%= element.firstName %>
                              <%= element.lastName %>
                          </td>
                          <td>
                            <%= element.gender %>
                          </td>
                          <td>
                            <%= element.country %>
                          </td>
                          <td>
                            <%= element.age %>
                          </td>
                          <td>
                            <%= moment(element.updatedAt).fromNow(); %>
                          </td>
                          <td>
                            <a data-bs-toggle="tooltip" data-bs-title="View details" data-bs-placement="top"
                              class="btn btn-primary btn-sm" href="/view/<%= element._id %>"><i
                                class="bi bi-eye"></i></a>

                            <a data-bs-toggle="tooltip" data-bs-title="Edit user" data-bs-placement="top"
                              class="btn btn-primary btn-sm" href="/edit/<%= element._id %>">
                              <i class="bi bi-pencil"></i>
                            </a>
                            <form style="display: inline;" action="/delete/<%= element._id %>?_method=DELETE"
                              method="post">
                              <button data-bs-toggle="tooltip" data-bs-title="Delete user" data-bs-placement="top"
                                class="btn btn-danger btn-sm" type="submit">
                                <i class="bi bi-trash"></i>
                              </button>
                            </form>
                          </td>
                        </tr>
                        <% }) %>




                    </tbody>
                  </table>
                  <% } %>


        </section>
    </main>
    <script src="./js/bootstrap.bundle.min.js"></script>

    <script src="./js/sidebars.js"></script>

    <script src="./js/main.js"></script>
</body>

</html>